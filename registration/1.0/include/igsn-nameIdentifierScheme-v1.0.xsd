<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://igsn.org/schema/kernel-v.1.0"
    xmlns:igsn="http://igsn.org/schema/kernel-v.1.0">
    <xs:simpleType name="nameIdentifier">
        <xs:annotation>
            <xs:documentation>The name or URL of the name identifier scheme.</xs:documentation>
        </xs:annotation>
        <xs:restriction base="xs:string">
            <xs:enumeration value="orcid"/>
            <xs:enumeration value="isni"/>
            <xs:enumeration value="viaf"/>
            <xs:enumeration value="researcherID"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>